        function replace_em(str) {
            var builder = "";
            var num = str.split("]");
                
            for (var i = 0; i < num.length; i++)
            {
              
                var index = getnum(num[i]);
                // alert(num[i]);
                builder += num[i].replace(/.[e,m]+.[0-9]+/g, '<img src="../arclist/' + index + '.gif" border="0" />');
            }

            
        
           // alert(builder);

            return builder;
        }


        function getnum(st)
        {
            var nu = st.replace(/[em_[^([1]?\d{1,2\)\)$]/ig, "")
            var nu1 = st.replace(/[^0-9]/ig, "");
           // alert(nu1);
            return nu1;
        }
